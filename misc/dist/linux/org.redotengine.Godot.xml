<?xml version="1.0"?>
<mime-info xmlns="http://www.freedesktop.org/standards/shared-mime-info">
  <mime-type type="application/x-redot-project">
    <comment>Redot Engine project</comment>
    <sub-class-of type="text/plain"/>
    <icon name="x-redot-project"/>
    <glob pattern="project.redot"/>
  </mime-type>

  <mime-type type="application/x-redot-resource">
    <comment>Redot Engine resource</comment>
    <icon name="x-redot-resource"/>
    <glob pattern="*.res"/>
    <glob pattern="*.tres"/>
  </mime-type>

  <mime-type type="application/x-redot-scene">
    <comment>Redot Engine scene</comment>
    <icon name="x-redot-scene"/>
    <glob pattern="*.scn"/>
    <glob pattern="*.tscn"/>
    <glob pattern="*.escn"/>
  </mime-type>

  <mime-type type="application/x-redot-shader">
    <comment>Redot Engine shader</comment>
    <sub-class-of type="text/plain"/>
    <icon name="x-redot-shader"/>
    <glob pattern="*.gdshader"/>
  </mime-type>

  <mime-type type="application/x-gdscript">
    <comment>GDScript script</comment>
    <sub-class-of type="text/plain"/>
    <icon name="x-gdscript"/>
    <glob pattern="*.gd"/>
  </mime-type>
</mime-info>
